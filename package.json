{
  "name": "energy-co-op-ui",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --configuration=production",
    "start:dev": "ng serve --configuration=development",
    "start:server": "npm start",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:coverage": "jest --ci --json --coverage",
    "e2e": "npx playwright test --ui",
    "e2e:headless": "npx playwright test",
    "e2e:ci": "start-test start:server http-get://localhost:4200 e2e:headless",
    "serve:ssr:energy-co-op-ui": "node dist/energy-co-op-ui/server/server.mjs",
    "lint": "ng lint",
    "pre-push-check": "npm run build && npm run lint && npm run test:coverage && npm run e2e:ci",
    "postinstall": "node src/version.js"
  },
  "private": true,
  "jest-junit": {
    "suiteName": "jest unit tests",
    "outputDirectory": "./reports",
    "outputName": "jest.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "@angular/cdk": "^20.2.11",
    "@angular/common": "^20.3.9",
    "@angular/compiler": "^20.3.9",
    "@angular/core": "^20.3.9",
    "@angular/forms": "^20.3.9",
    "@angular/material": "^20.2.11",
    "@angular/platform-browser": "^20.3.9",
    "@angular/platform-browser-dynamic": "^20.3.9",
    "@angular/router": "^20.3.9",
    "@auth0/auth0-angular": "^2.3.0",
    "chart.js": "^4.5.1",
    "chartjs-plugin-datalabels": "^2.2.0",
    "jwt-decode": "^4.0.0",
    "moment": "^2.30.1",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^20.3.9",
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@jest/globals": "^30.0.2",
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "angular-eslint": "21.0.1",
    "babel-loader": "^10.0.0",
    "babel-plugin-istanbul": "^7.0.0",
    "blob-polyfill": "^9.0.20240710",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.2.1",
    "fs-extra": "^11.3.3",
    "git-describe": "^4.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^16.0.0",
    "start-server-and-test": "^2.1.3",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0"
  }
